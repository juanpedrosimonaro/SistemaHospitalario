<html lang="en">
<%- include("./parciales/cabecera.ejs") %>

  <body>
    <%- include("./parciales/barra.ejs") %>
      <h1>Registrar Factura</h1>
      <div class="inicio content">
        <form action="/medico/establecer-factura/<%= PacienteId %>" method="POST">
          <label for="costos">Ingresar el costo:</label>
          <input type="number" id="costos" name="costos" required><br>
          <label for="serviciosPrestados">Servicios Prestados:</label>
          <input type="text" id="serviciosPrestados" name="serviciosPrestados" required><br>
          <label for="estado">Estado:</label>
          <select id="estado" name="estado">
            <option value="0" disabled selected hidden>Seleccione un estado</option>
            <% estadosFactura.forEach(estado=>{ %>
              <option value="<%= estado %>"> <%= estado %> </option>
            <% })%>
          </select><br>
          <input type="submit" value="Subir">
        </form>
      </div>

      <%- include("./parciales/fondo.ejs") %>
  </body>

</html>
